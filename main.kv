<CustomColorPicker>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (211/255, 211/255, 211/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        canvas:
            Color:
                rgba: (root.red/255, root.green/255, root.blue/255, 1)
            Rectangle:
                pos: (10, 185)
                size: 330, 110
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: red_value
                text: 'RED'
                font_size: 16
                color: (255/255, 0/255, 0/255, 1)
                bold: True
            Slider:
                min: 0
                max: 255
                step: 1
                orientation: 'horizontal'
                on_value: root.slider_it('red', *args)
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: green_value
                text: 'GREEN'
                font_size: 16
                color: (0/255, 255/255, 0/255, 1)
                bold: True
            Slider:
                min: 0
                max: 255
                step: 1
                orientation: 'horizontal'
                on_value: root.slider_it('green', *args)
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: blue_value
                text: 'BLUE'
                font_size: 16
                color: (0/255, 0/255, 255/255, 1)
                bold: True
            Slider:
                min: 0
                max: 255
                step: 1
                orientation: 'horizontal'
                on_value: root.slider_it('blue',*args)
    RelativeLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.5)
        Label:
            id: rgb_values
            pos_hint: {'center_x': 0.30, 'center_y': 0.5}
            text: 'RGB CODE:'
            font_size: 16
            color: 0,0,0,1
            bold: True
        TextInput:
            id:code_input
            multiline: False
            size_hint: (None, None)
            height: 28
            width:100
            halign:'center'
            pos_hint: {'center_x': 0.6, 'center_y': 0.5}
            text: '0,0,0'
            bold: True
    RelativeLayout:
        orientation:'horizontal'
        size_hint: (0.5, 0.1)
        Button:
            id:copy_button
            text:'COPY'
            font_size: 16
            size_hint: (None, None)
            size: 80, 25
            pos_hint: {'center_x': 1, 'center_y': 1}
            on_press: root.copy()
            bold: True
